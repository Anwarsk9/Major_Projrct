<% layout("layout/boilerplate") %>
<script>
  const mapToken = "<%=process.env.MAP_TOKEN%>";
  const longitude = "<%= data.geometry.coordinates[0] %>";
  const lattitude = "<%= data.geometry.coordinates[1] %>";
  const listingLocation = "<%- data.location%>";
</script>
<body>
  <div class="show-box">
    <div class="show-container">
      <h1><%=data.title%></h1>
      <img src="<%=data.image.url%>" class="show-img" />
      <p class="mt-2">Owned By: <%=data.owner.username%></p>
      <h4 class="mt-3"><%=data.description%></h4>
      <%if(data.price){%>
      <p>&#8377;<%=data.price.toLocaleString("en-IN");%>/night</p>
      <%}%>
      <p><%=data.location%></p>
      <h6><%=data.country%></h6>

      <%if(currUser && data.owner._id.equals(currUser._id)){%>
      <div class="d-flex justify-content-between mt-4 mb-4">
        <a
          href="/listings/<%=data._id%>/edit"
          class="btn btn-dark"
          style="width: 100px"
          >Edit</a
        >
        <form method="post" action="/listings/<%=data._id%>?_method=DELETE">
          <button class="btn btn-danger" style="width: 100px">Delete</button>
        </form>
      </div>
      <%}%>
      <hr />

      <div class="mb-3 mt-4">
        <form
          action="/listings/<%=data._id%>/reviews"
          method="post"
          novalidate
          class="needs-validation"
        >
          <h2>Leave a Review</h2>
          <label>Rating</label>
          <fieldset class="starability-slot mt-2">
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="1"
              checked
              aria-label="No rating."
            />
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>

          <label for="comment" class="form-label mt-3">Comment</label>
          <textarea
            name="review[comment]"
            id="comment"
            class="form-control"
            rows="5"
            required
          ></textarea>
          <div class="invalid-feedback">
            Please submit some commets for review.
          </div>
          <button class="btn btn-dark mt-3">Submit</button>
        </form>
      </div>

      <hr />

      <%if(data.reviews.length > 0){%>
      <h4>All Reviews</h4>
      <div class="reviews">
        <%for(i of data.reviews){%>
        <div class="card review-box">
          <div class="card-body">
            <div class="show-card-user">
              <i class="fa-solid fa-circle-user user-icon"></i>
              <div class="user-details">
                <h5 class="card-title show-card-title">@<%=i.author.username%></h5>
                <p class="show-card-date"><%= i.createdAt.toString().slice(0,15) %></p>
              </div>
            </div>
            <p class="card-text"><%=i.comment%></p>
            <p class="starability-result" data-rating="<%=i.rating%>"></p>
          </div>
          <%if(currUser && data.reviews[0].author._id.equals(currUser._id)){%>
          <form
            method="post"
            action="/listings/<%=data._id%>/reviews/<%=i._id%>?_method=DELETE"
          >
            <button class="btn btn-sm btn-dark review-btn">Delete</button>
          </form>
          <%}%>
        </div>
        <%}%>
      </div>
      <%}%>
      <h3 class="map-caption">Where youâ€™ll be</h3>
      <div id="map"></div>
    </div>
  </div>

  <script src="/js/map.js"></script>
</body>
